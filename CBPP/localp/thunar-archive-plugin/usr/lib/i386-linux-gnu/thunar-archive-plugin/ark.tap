# determine the action and the folder, $@ then contains only the files
action=$1; shift;
folder=$1; shift;

# check the action
case $action in
create)
	exec ark --add "$@"
	;;

extract-here)
	exec ark --extract-to "$folder" "$@"
	;;

extract-to)
	exec ark --extract "$@"
	;;

*)
	echo "Unsupported action '$action'" >&2
	exit 1
esac

